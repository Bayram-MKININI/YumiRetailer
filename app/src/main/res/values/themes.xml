<resources>
    <!-- Base application theme. -->
    <style name="Theme.YumiRetailer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@android:color/white</item>
        <item name="colorOnPrimaryContainer">@color/grey_2</item>
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@color/red_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/black</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.YumiRetailer.NoActionBar</item>
    </style>

    <style name="Theme.YumiRetailer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.rounded7dp" parent="">
        <item name="cornerSize">7dp</item>
    </style>

    <style name="FullScreenDialogTheme" parent="ThemeOverlay.Material3.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>