<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_retailer.feature_profile.presentation.views.CategoryItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_rounded_grey1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/omnes_semibold_regular"
        android:textColor="@color/grey_2"
        android:textSize="14sp" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/consumed_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/remaining_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</net.noliaware.yumi_retailer.feature_profile.presentation.views.CategoryItemView>