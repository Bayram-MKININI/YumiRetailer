<?xml version="1.0" encoding="utf-8"?>
<net.noliaware.yumi_retailer.feature_profile.presentation.views.VouchersOverviewView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_view_background" />

    <View
        android:id="@+id/header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/back_layout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/category_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_white"
        android:padding="12dp" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/available_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/expected_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/consumed_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.feature_profile.presentation.views.VoucherCountView
        android:id="@+id/cancelled_vouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.commun.presentation.views.ClipartTabView
        android:id="@+id/available_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.commun.presentation.views.ClipartTabView
        android:id="@+id/used_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.commun.presentation.views.ClipartTabView
        android:id="@+id/cancelled_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <net.noliaware.yumi_retailer.commun.presentation.views.ElevatedCardView
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </net.noliaware.yumi_retailer.commun.presentation.views.ElevatedCardView>
</net.noliaware.yumi_retailer.feature_profile.presentation.views.VouchersOverviewView>